{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "post"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string"
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "tag": {
      "type": "enumeration",
      "enum": [
        "CSS",
        "JavaScript",
        "React",
        "angular",
        "other"
      ],
      "required": true
    }
  }
}
